<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSupplier">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/proveedor"
            android:layout_marginLeft="140dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producto:"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/inputProducto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Introuzca producto..." />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compañia:"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/inputCompañia"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Introuzca nombre de la compañia..."/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Introuzca email de la compañia....."/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefono:"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/inputPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:hint="Introuzca telefono de la compañia....."/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direccion:"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/inputDir"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Introuzca direccion de la compañia....."/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addSupplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/add"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>